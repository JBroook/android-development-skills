<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SilentSOS" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/orange</item>

        <item name="colorSurface">@color/grey</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="android:fontFamily">@font/inter_semibold</item>

    </style>

    <style name="Theme.SilentSOS" parent="Base.Theme.SilentSOS" />

    <style name="Theme.SilentSOS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SilentSOS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SilentSOS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>